        var width = 500;
        var height = 600;
        // Daum 주소검색 API 사용 
        daum.postcode.load(function(){
            new daum.Postcode({
                oncomplete: function(data){
                    document.getElementById('address').value = data.address;
                }
            }).open({
                left: (window.screen.width / 2) - (width/2),
                top: (window.screen.height / 2) - (height / 2)
            });
        });
    }
