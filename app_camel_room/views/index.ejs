<script>
    //주소 검색 자동완성
    var search = $("#search").get(0);
    var options = {
        componentRestrictions: { country: 'kor' },
        type: ['(cities)'],
        language: "ko"
    };
    var autocomplete = new google.maps.places.Autocomplete(search, options);
    function singleClick(id){
        window.location.href='/single-property/'+id;
    }
</script>
